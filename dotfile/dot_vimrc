Plugin 'mzlogin/vim-markdown-toc'
Plugin 'yggdroot/indentline'

" snips and auto complete
" neocomplete
Plugin 'shougo/deoplete.nvim'
" auto complete words
Plugin 'ujihisa/neco-look'

" Tex line break
Plugin 'junegunn/goyo.vim'
